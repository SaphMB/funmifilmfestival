{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
  ],
  "plugins": ["react", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "amd": true,
    "es6": true,
    "node": true,
    "browser": true,
    "commonjs": true,
    "mocha": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-var": ["error"],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "import/default": 0,
    "react/display-name": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {}
    }
  }
}
